@model Software_Engineering_Final_Project_Team_Primal_Animals.ViewModels.RegisterViewModel

<style>
    .register-container {
        max-width: 480px;
        margin: 60px auto;
        background: white;
        padding: 40px;
        border-radius: 18px;
        box-shadow: 0px 4px 14px rgba(0,0,0,0.08);
    }

    .title {
        font-size: 28px;
        font-weight: 700;
        color: #0077b6;
        text-align: center;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px;
    }

    .btn-register {
        width: 100%;
        padding: 12px;
        border-radius: 30px;
        font-size: 16px;
    }
</style>

<div class="register-container">
    <h2 class="title mb-4">Create Your Account</h2>

    <form asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label class="fw-bold">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>

        <label class="fw-bold mt-2">Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>

        <label class="fw-bold mt-2">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <label class="fw-bold mt-2">Date of Birth</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>

        <label class="fw-bold mt-2">Password</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <label class="fw-bold mt-2">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

        <button type="submit" class="btn btn-primary btn-register mt-3">Register</button>

        <p class="text-center mt-3">
            Already have an account?
            <a href="/Account/Login">Login here</a>
        </p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

