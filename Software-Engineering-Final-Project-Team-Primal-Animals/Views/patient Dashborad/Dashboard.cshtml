@*
*@
@{<h2>Patient Dashboard</h2>

@if (Model == null)
{
    <p>No data available.</p>
    return;
}

@if (!string.IsNullOrEmpty(Model.PressureMatrix))
{
    <div>
        <h3>Pressure Matrix</h3>
        <pre>@Model.PressureMatrix</pre>
    </div>

    <div>
        <h4>Metrics</h4>
        <p><strong>Peak Pressure Index:</strong> @Model.PeakPressure</p>
        <p><strong>Contact Area:</strong> @Model.ContactArea</p>
        <p><strong>Timestamp:</strong> @Model.Timestamp</p>
    </div>

    <div>
        <h4>Emergency Contact</h4>
        <p>@Model.EmergencyName</p>
        <p>@Model.EmergencyNumber</p>
    </div>

    <h3>Leave a Comment</h3>
    <form asp-action="PostComment" method="post">
        <textarea class="form-control" name="CommentText"></textarea>
        <input type="hidden" name="Data_ID" value="@Model.Timestamp.Ticks" />
        <button type="submit" class="btn btn-primary mt-2">Submit Comment</button>
    </form>
}
else
{
    <p>No pressure data available yet.</p>
}

}
