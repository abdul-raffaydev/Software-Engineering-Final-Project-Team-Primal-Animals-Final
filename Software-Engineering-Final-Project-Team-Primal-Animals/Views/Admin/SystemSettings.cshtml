@model Software_Engineering_Final_Project_Team_Primal_Animals.Models.SystemSetting

<div class="container mt-4">

    <h2 class="fw-bold text-success mb-4">System Settings</h2>

    <form asp-action="SystemSettings" method="post" class="card p-4 shadow-sm">

        <div class="mb-3">
            <label>Theme</label>
            <select asp-for="Theme" class="form-select">
                <option value="light">Light</option>
                <option value="dark">Dark</option>
            </select>
        </div>

        <div class="mb-3">
            <label>Email Alerts</label>
            <input type="checkbox" asp-for="EmailAlerts" />
        </div>

        <div class="mb-3">
            <label>Anomaly Alerts</label>
            <input type="checkbox" asp-for="AnomalyAlerts" />
        </div>

        <div class="mb-3">
            <label>Refresh Rate (seconds)</label>
            <input asp-for="RefreshRate" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Timezone</label>
            <input asp-for="Timezone" class="form-control" />
        </div>

        <button class="btn btn-primary px-4">Save Settings</button>

        <a asp-action="AdminDashboard" class="btn btn-secondary ms-3">Back</a>

    </form>

</div>
