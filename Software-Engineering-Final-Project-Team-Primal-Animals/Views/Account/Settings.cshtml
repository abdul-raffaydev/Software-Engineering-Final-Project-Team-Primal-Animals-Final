@model Software_Engineering_Final_Project_Team_Primal_Animals.ViewModels.AccountSettingsViewModel

@{
    ViewData["Title"] = "Account Settings";
}

<div class="container mt-5" style="max-width:700px;">
    <h2 class="fw-bold text-primary mb-4">Account Settings</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    <form asp-action="Settings" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label class="form-label fw-bold">Full Name</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Date of Birth</label>
            <input asp-for="DateOfBirth" class="form-control" readonly />
            <span class="form-text">Contact your clinician to change your date of birth.</span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Emergency Contact Name</label>
            <input asp-for="EmergencyContactName" class="form-control" />
            <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Emergency Contact Number</label>
            <input asp-for="EmergencyContactNumber" class="form-control" />
            <span asp-validation-for="EmergencyContactNumber" class="text-danger"></span>
        </div>

        <button class="btn btn-primary">Save Changes</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
