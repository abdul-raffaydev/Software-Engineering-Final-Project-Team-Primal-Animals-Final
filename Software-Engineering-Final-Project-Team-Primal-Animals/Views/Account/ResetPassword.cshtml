@{
    ViewData["Title"] = "Reset Password";
}

<div class="container mt-5" style="max-width: 420px;">
    <h2 class="fw-bold text-primary mb-4">Reset Password</h2>

    <form method="post">
        <input type="hidden" name="userId" value="@ViewBag.UserId" />
        <input type="hidden" name="token" value="@ViewBag.Token" />

        <div class="mb-3">
            <label>New Password</label>
            <input name="newPassword" type="password" class="form-control" required />
        </div>

        <div class="mb-3">
            <label>Confirm Password</label>
            <input name="confirmPassword" type="password" class="form-control" required />
        </div>

        <button class="btn btn-primary w-100">Reset Password</button>

        @if (ViewBag.Error != null)
        {
            <p class="text-danger mt-3">@ViewBag.Error</p>
        }
    </form>
</div>
