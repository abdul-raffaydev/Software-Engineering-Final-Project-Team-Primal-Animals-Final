@{
    ViewData["Title"] = "Reset Token";
}

<div class="container mt-5" style="max-width: 500px;">
    <h3 class="fw-bold text-success">Password Reset Token</h3>

    <p class="text-muted">Copy this token and follow the link below:</p>

    <div class="alert alert-warning mt-3">
        <strong>Token:</strong>
        <div class="mt-2">@ViewBag.Token</div>

        <strong>User ID:</strong>
        <div class="mt-2">@ViewBag.UserId</div>
    </div>

    <a class="btn btn-success w-100 mt-3"
       href="/Account/ResetPassword?userId=@ViewBag.UserId&token=@Uri.EscapeDataString(ViewBag.Token)">
       Reset Password
    </a>
</div>
