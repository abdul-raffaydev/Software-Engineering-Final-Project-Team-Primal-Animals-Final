<script>
// Heatmap (Demo)
const canvas = document.getElementById("homeHeatmap");
if (canvas) {
    const ctx = canvas.getContext("2d");
    const grid = 16;
    const cell = canvas.width / grid;
    const values = [];
    for (let i = 0; i < grid * grid; i++) {
        let val = Math.random() * 120;
        const row = Math.floor(i / grid);
        const col = i % grid;
        const distCenter = Math.hypot(row - grid/2, col - grid/2);
        if (distCenter < 4) { val += 100 - distCenter * 10; }
        if (val > 255) val = 255;
        values.push(val);
    }
    ctx.filter = "blur(1.5px)";
    values.forEach((v, i) => {
        const x = (i % grid) * cell;
        const y = Math.floor(i / grid) * cell;
        const t = v / 255;
        const r = Math.floor(255 * t);
        const g = Math.floor(255 * (1 - Math.abs(t - 0.5) * 2));
        const b = Math.floor(255 * (1 - t));
        ctx.fillStyle = `rgb(${r},${g},${b})`;
        ctx.fillRect(x, y, cell, cell);
    });
}

// Counters
document.querySelectorAll('.insight-number').forEach(counter => {
    counter.innerText = '0';
    const updateCounter = () => {
        const target = +counter.getAttribute('data-target');
        const value = +counter.innerText;
        const inc = target / 120;
        if (value < target) {
            counter.innerText = `${Math.ceil(value + inc)}`;
            setTimeout(updateCounter, 15);
        } else {
            counter.innerText = target;
        }
    };
    updateCounter();
});
</script>

