        </div>
    </div>
</section>

<!-- ===== INTERACTIVE HEATMAP DEMO ===== -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center fw-bold mb-4 text-primary">Live Heatmap Simulation</h2>
        <p class="text-center text-muted mb-4">
            This interactive demo represents how the seating pressure heatmap updates in real time.
        </p>

        <div class="d-flex justify-content-center">
            <div id="demo-heatmap"
                 style="display: grid;
                        grid-template-columns: repeat(16, 1fr);
                        width: 320px;
                        height: 320px;
                        gap: 0;">
            </div>
        </div>

        <script>
            const heatDemo = document.getElementById("demo-heatmap");

            function generateHeatmap() {
                heatDemo.innerHTML = "";
                for (let i = 0; i < 256; i++) {
                    const v = Math.floor(Math.random() * 255);
                    const cell = document.createElement("div");
                    cell.style.backgroundColor = `rgb(${v}, 20, ${255 - v})`;
                    cell.style.width = "100%";
                    cell.style.height = "100%";
                    heatDemo.appendChild(cell);
                }
            }

            generateHeatmap();
            setInterval(generateHeatmap, 800); // update every 0.8s
        </script>
    </div>
</section>

