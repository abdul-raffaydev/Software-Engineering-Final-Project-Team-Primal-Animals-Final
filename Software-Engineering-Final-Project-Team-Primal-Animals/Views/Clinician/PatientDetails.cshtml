@model Software_Engineering_Final_Project_Team_Primal_Animals.ViewModels.PatientDetailsVM
@using System.Text.Json
@{
    ViewData["Title"] = "Clinician Individual Patient Details";
    string lastFrameLabel = Model.Frames.Any()
        ? Model.Frames.Last().Timestamp.ToString()
        : "N/A";
}

<link rel="stylesheet" href="/css/bootstrap.min.css" />

<script src="/js/chart.js"></script>

<script src="/js/patientdetails.js"></script>

<script>
    const patientId = @Model.PatientId;
    let frames = JSON.parse('@Html.Raw(JsonSerializer.Serialize(Model.Frames))');
    let currentFrameIndex = frames.length ? frames.length - 1 : 0;

    const initialHeatmap = JSON.parse('@Html.Raw(Model.HeatmapJson ?? "[]")');
    const peakSeries = JSON.parse('@Html.Raw(JsonSerializer.Serialize(Model.PeakPressureSeries))');
    const contactSeries = JSON.parse('@Html.Raw(JsonSerializer.Serialize(Model.ContactAreaSeries))');

    document.addEventListener("DOMContentLoaded", initPatientDetailsPage);
</script>



<style>
    .card-app {
        width: 100%;
        max-width: 980px;
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 6px 18px rgba(18,38,63,0.12);
        padding: 26px;
        margin: 15px auto;
    }

    .heatmap-container {
        position: relative;
        height: 320px;
        border-radius: 10px;
    }

    #heatmapCanvas {
        width: 100%;
        height: 320px;
        border-radius: 10px;
        background: #fff;
        pointer-events: none;
    }

    .heatmap-loader {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background: rgba(255,255,255,0.7);
        border-radius: 10px;
        display: none;
        opacity: 0;
        z-index: 50;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        transition: opacity .25s ease;
    }

        .heatmap-loader.show {
            display: flex;
            opacity: 1;
        }

    .chart-box {
        height: 68px;
    }

    .metric-label {
        font-weight: 600;
        color: #2d4963;
    }

    .metric-value {
        font-size: 18px;
        font-weight: 700;
        color: #0b66a0;
    }

    .comment-bubble {
        background: #f1f6fb;
        padding: 10px 12px;
        border-radius: 8px;
        margin-bottom: 8px;
    }

    @@media (max-width: 768px) {
        #heatmapCanvas {
            height: 220px;
        }

        .heatmap-loader {
            height: 220px;
        }
    }
</style>

<div class="card-app">

    <!-- HEADER -->
    <div class="d-flex align-items-center mb-3">
        <a class="btn btn-sm btn-light me-3" href="javascript:history.back()">← Back</a>

        <div class="flex-grow-1">
            <div style="font-size:24px;font-weight:700;color:#0b3b66;">Clinician Individual Patient Details</div>
            <div style="font-size:14px;color:#6b7b8f">
                Viewing: <strong>@Model.PatientName</strong>
            </div>
        </div>

        <a class="btn btn-outline-primary" href="/Account/Logout">Logout</a>
    </div>


    <div class="row g-3">

        <!-- ===========================
             LEFT SECTION (Heatmap)
        ============================ -->
        <div class="col-md-7">

            <div class="metric-label mb-2">Live Heat Map</div>

            <div class="heatmap-container">
                <canvas id="heatmapCanvas"></canvas>

                <div id="heatmapLoader" class="heatmap-loader">
                    <div class="spinner-border text-primary" style="width:2rem;height:2rem;"></div>
                    <div class="mt-2 small text-primary">Loading frame...</div>
                </div>
            </div>

            <!-- Timeline / Frame Slider -->
            <div class="mt-3 d-flex justify-content-between align-items-center">

                <div class="d-flex align-items-center gap-2">
                    <span>Frames:</span>
                    <input type="range"
                           id="frameRange"
                           min="0"
                           max="@(Model.Frames.Count > 0 ? Model.Frames.Count - 1 : 0)"
                           step="1"
                           value="@(Model.Frames.Count > 0 ? Model.Frames.Count - 1 : 0)" />

                    <span id="frameLabel">Frame: @lastFrameLabel</span>
                </div>

                <div class="btn-group">
                    <button id="btn1h" class="btn btn-sm btn-outline-secondary">1h</button>
                    <button id="btn6h" class="btn btn-sm btn-outline-secondary">6h</button>
                    <button id="btn24h" class="btn btn-sm btn-outline-secondary active">24h</button>
                    <button id="btn7d" class="btn btn-sm btn-outline-secondary">7d</button>
                </div>
            </div>

            <!-- Report -->
            <div class="mt-3">
                <button id="btnReport" class="btn btn-sm btn-primary">Generate Simple Report</button>
                <div id="reportArea" class="mt-2"></div>
            </div>

        </div>


        <!-- ===========================
             RIGHT SECTION (Charts & Comments)
        ============================ -->
        <div class="col-md-5">

            <!-- Peak Pressure Chart -->
            <div class="p-2 small-chart mb-3">
                <div>
                    <div class="d-flex justify-content-between mb-1">
                        <div class="metric-label">
                            Peak Pressure Index<br>
                            <small class="text-muted">@Model.PeakPressureIndex</small>
                        </div>
                        <div class="metric-value">@Model.PeakPressureIndex</div>
                    </div>

                    <div class="chart-box">
                        <canvas id="peakChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Contact Area Chart -->
            <div class="p-2 small-chart mb-3">
                <div>
                    <div class="d-flex justify-content-between mb-1">
                        <div class="metric-label">
                            Percentage Contact Area<br>
                            <small class="text-muted">@Model.ContactArea</small>
                        </div>
                        <div class="metric-value">@Model.ContactArea</div>
                    </div>

                    <div class="chart-box">
                        <canvas id="contactChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Threshold Setting -->
            <div class="mb-3">
                <h6>Threshold (High Pressure)</h6>

                <form id="thresholdForm">
                    @Html.AntiForgeryToken()

                    <div class="input-group">
                        <input id="thresholdValue" type="number"
                               class="form-control"
                               value="@Model.HighPressureThreshold" />
                        <button class="btn btn-outline-primary" type="submit">Save</button>
                    </div>
                </form>

                <div id="thresholdMsg" class="small text-muted mt-1"></div>
            </div>

            <!-- Comments -->
            <div>
                <h6>Comments</h6>

                <div id="commentsList">
                    @foreach (var c in Model.Comments)
    {
                    <div class="comment-bubble">
                        <div class="small text-muted">
                            @(c.Author == "You" ? "You" : Model.PatientName)
                            (@c.CommentTime.ToLocalTime())
                        </div>
                        <div>@c.Content</div>
                    </div>
    }
                </div>

                <form id="commentForm" class="mt-2">
                    @Html.AntiForgeryToken()

                    <input type="hidden" id="commentDataId"
                           value="@(Model.Frames.LastOrDefault()?.DataId ?? 0)" />

                    <textarea id="commentText" class="form-control" rows="3"
                              placeholder="Write a comment..."></textarea>

                    <button class="btn btn-primary btn-sm mt-2" type="submit">Post Comment</button>
                </form>
            </div>

        </div>
    </div>

</div>


