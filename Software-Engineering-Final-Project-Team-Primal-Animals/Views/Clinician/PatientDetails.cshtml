@{
    ViewData["Title"] = "Clinician Individual Patient Details";
}

<!-- Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f3f7fb;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        padding: 30px;
    }

    .paper-grid {
        background-image: linear-gradient(rgba(0,0,0,0.02) 1px, transparent 1px), linear-gradient(90deg, rgba(0,0,0,0.02) 1px, transparent 1px);
        background-size: 40px 40px, 40px 40px;
        padding: 18px;
        border-radius: 12px;
        display: inline-block;
    }

    .card-app {
        width: 900px;
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 6px 18px rgba(18,38,63,0.12);
        padding: 26px;
    }

    .app-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 14px;
    }

    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        border-radius: 8px;
        background: #fff;
        border: 1px solid rgba(0,0,0,0.06);
        box-shadow: inset 0 1px 0 rgba(255,255,255,0.6);
    }

    .title {
        font-size: 24px;
        font-weight: 700;
        color: #0b3b66;
    }

    .subtle {
        color: #6b7b8f;
        font-size: 14px
    }

    .heatmap {
        height: 240px;
        border-radius: 10px;
        background: radial-gradient(circle at 30% 30%, #ffde59, #ff7d3b 20%, #d33a2c 50%, #6b0000 80%);
        box-shadow: inset 0 0 60px rgba(255,255,255,0.08);
    }

    .small-chart {
        height: 110px;
        border-radius: 10px;
        background: linear-gradient(180deg,#f6fbff,#eff6ff);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .metric-label {
        font-weight: 600;
        color: #2d4963
    }

    .metric-value {
        font-size: 18px;
        font-weight: 700;
        color: #0b66a0
    }

    .comments-box {
        margin-top: 18px;
    }

    .comment-bubble {
        background: #f1f6fb;
        padding: 10px 12px;
        border-radius: 10px;
        display: inline-block;
        margin-bottom: 8px;
    }

    .reply-input {
        width: 100%;
    }

    /* Razor-safe responsive rule */
    @@media (max-width: 980px) {
        .card-app {
            width: 100%;
        }

        .heatmap {
            height: 180px;
        }
    }
</style>

